<Window x:Class="Gourmet.DesistoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Desisto" Height="150" Width="300">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Qual prato você pensou?" HorizontalAlignment="Center" FontSize="16"/>
            <TextBox x:Name="txtResposta" Width="200" Margin="5"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10">
                <Button Content="OK" Click="btnOK_Click" Width="80" Margin="5"/>
                <Button Content="Cancelar" Click="btnCancelar_Click" Width="80" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
